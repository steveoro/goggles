        %li
          %a(href="#how_to_register")= t('tutorials.how_to_register')
      %li
        %a(href="#what_can_i_do")= t('tutorials.what_can_i_do')
      %li
        %a(href="#how_to_view_passages")= t('tutorials.how_to_view_passages')
