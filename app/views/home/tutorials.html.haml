        %a(href="#how_to_calculate_fin_score")= t('tutorials.how_to_calculate_fin_score')
  
  
  .row-fluid.span10
    - if user_signed_in?
      = render( partial: 'how_to_register' )
    = render( partial: 'what_can_i_do' )
