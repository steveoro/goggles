.row-fluid
  %p
    %a.btn.btn-large.btn-block.btn-info.thumbnail{ :href => misc_fin_score_calculation_path(), 'data-toggle'=>'tooltip', 'title'=>I18n.t('misc.fin_score_calculation_tooltip') }
      = image_tag( 'abacus-128.png', class: 'img-circle', style: "width: 50%;" )
      %br
      = t('misc.fin_score_calculation')

- @results.each do |meeting|
  .row-fluid
    %p
      %a.btn.btn-large.btn-block.btn-success.thumbnail{ :href => meeting_show_full_path(id: meeting.id), 'data-toggle'=>'tooltip', 'title'=>I18n.t('meeting.show_results_tooltip') }
        = image_tag( 'victory-stand-128.png', class: 'img-circle', style: "width: 50%;" )
        %br
        = t('results') + ' ' + meeting.get_full_name

- @start_lists.each do |meeting|
  .row-fluid
    %p
      %a.btn.btn-large.btn-block.btn-success.thumbnail{ :href => meeting_show_start_list_path(id: meeting.id), 'data-toggle'=>'tooltip', 'title'=>I18n.t('meeting.start_list_tooltip') }
        = image_tag( 'spiral-128.png', class: 'img-circle', style: "width: 50%;" )
        %br
        = t('meeting.start_list') + ' ' + meeting.get_full_name

- @invitations.each do |meeting|
  .row-fluid
