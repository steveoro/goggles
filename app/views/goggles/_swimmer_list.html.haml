.row.col-xs-12
  %table.table.table-striped.table-bordered.table-hover.table-condensed
    %tbody
      %tr.info.text-center
        %td
          %b= I18n.t('general.swimmer')
        %td
          %b= I18n.t('swimmers.affiliated_in_teams')
        %td
          %b= I18n.t('swimmers.year_of_birth')
        %td
          %b= I18n.t('swimmers.current_category')
    - @swimmers.each do |swimmer|
      %tr
        %td
          = swimmer.decorate.get_linked_swimmer_name.html_safe
        %td
          = swimmer.decorate.get_linked_team_names.html_safe
        %td.text-right
          = swimmer.decorate.year_of_birth
        %td.text-right
          = swimmer.decorate.get_current_category_type_codes.join(' / ')

.row.col-xs-12
  &nbsp;
