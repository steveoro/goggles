.row-fluid#ga-opt-out
  .alert.alert-info
    %i
      %strong= t('privacy.we_use_cookies')
    .row-fluid
      .btn= link_to_function( t('privacy.agreed'), "gaOptIn(); $('#ga-opt-out').hide();" )
      .btn= link_to_function( t('privacy.disable'), "gaOptOut(); $('#ga-opt-out').hide();" )
%script
  if ( (document.cookie.indexOf(disableStr + '=true') > -1) || (document.cookie.indexOf(disableStr + '=false') > -1) ) { $('#ga-opt-out').hide(); }
