.col-xs-12
  .jumbotron
    .container
      .col-xs-12.col-sm-4
        %h3= t(:welcome)
      .col-xs-12.col-sm-8
        %a.btn.btn-primary.goggles-margin-bottom(href="#{ new_user_session_path() }")= t(:login)
