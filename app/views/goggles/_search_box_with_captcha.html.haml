.row.col-xs-12.goggles-category-gap
  .container
    .row
      .col-xs-offset-2.col-xs-8
        = form_tag( :search_smart_with_captcha, remote: true, method: :get, class: 'form-horizontal', onsubmit: "$('#loadingIndicator').show();") do
          .input-group
            = text_field_tag( :q, nil, { class: "form-control", placeholder: I18n.t('search_view.query_suggestion') } )
            %span.input-group-btn
              = submit_tag( I18n.t('search'), id: 'btnSearchSmart', data: { disable_with: I18n.t(:please_wait), class: 'btn disabled' }, class: 'btn btn-default' )
          .input-group
            %br/
            = recaptcha_tags
      .col-xs-2
        %span(id='loadingIndicator' hidden='true')
          = image_tag( 'indicator.gif' )

