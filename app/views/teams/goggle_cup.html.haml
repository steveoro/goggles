= render( partial: 'tabs_and_radio_title' )

.row-fluid#goggle_cup_presentation
  .offset1.span10
    %p
      %b= @goggle_cup.get_full_name
      = I18n.t('goggle_cup.presentation.part1')
      = I18n.t('goggle_cup.presentation.part2')
      = I18n.t('goggle_cup.presentation.part3')
      = I18n.t('goggle_cup.presentation.part4')

- if @goggle_cup
  .row-fluid#goggle_cup_grid
    .offset1.span10
      %table.table.table-striped.table-bordered.table-hover.table-condensed
        %tbody
          %tr{'class'=>'info'}
            %td.goggles-rightalign
              %b= I18n.t('rank')
            %td
              %b= I18n.t('activerecord.models.swimmer')
            %td.goggles-rightalign
              %b= I18n.t('total')
            %td.goggles-centeralign
              %b= I18n.t('goggle_cup.count')
            %td.goggles-rightalign
              %b= I18n.t('average')
            %td.goggles-rightalign
              %b= I18n.t('max')
            %td.goggles-rightalign
              %b= I18n.t('min')
          - @goggle_cup_rank.each_with_index do |rank_element,index|
            %tr
              %td.goggles-rightalign
                = show_tag( index==0, "medal_gold_3.png", '' )
                = show_tag( index==1, "medal_silver_3.png", '' )
                = show_tag( index==2, "medal_bronze_3.png", '' )
                = index + 1
              %td
                = rank_element[:swimmer].decorate.get_linked_swimmer_name_to_goggle_cup
              %td.goggles-rightalign
                %b= sprintf( "%02.2f", rank_element[:total] )
              %td.goggles-centeralign
                = rank_element[:count]
              %td.goggles-rightalign
                = sprintf( "%02.2f", rank_element[:average] )
              %td.goggles-rightalign
                = sprintf( "%02.2f", rank_element[:max] )
              %td.goggles-rightalign
                = sprintf( "%02.2f", rank_element[:min] )
- else
  .row-fluid
    %p= I18n.t('goggle_cup.send_us_your_goggle_cups')

.row-fluid
  .offset1.span10
.row-fluid#goggle_cup_rules
  .offset1.span10
    %h3= I18n.t('goggle_cup.rules_title')
    %p
      = I18n.t('goggle_cup.rules.part1').gsub('{GOGGLE_CUP_NAME}', @goggle_cup.get_full_name).gsub('{TEAM_NAME}', @team.get_full_name)
      = I18n.t('goggle_cup.rules.part2').gsub('{GOGGLE_CUP_NAME}', @goggle_cup.get_full_name).gsub('{MAX_PERFORMANCE}', @goggle_cup.max_performance.to_s)
      = I18n.t('goggle_cup.rules.part3')
      = I18n.t('goggle_cup.rules.part4')
      = I18n.t('goggle_cup.rules.part5').gsub('{MAX_POINTS}', @goggle_cup.max_points.to_s)
      = I18n.t('goggle_cup.rules.part6').gsub('{MAX_POINTS}', @goggle_cup.max_points.to_s)
      = I18n.t('goggle_cup.rules.part7').gsub('{MAX_POINTS}', @goggle_cup.max_points.to_s)
