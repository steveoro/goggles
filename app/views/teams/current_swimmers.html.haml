%ul.nav.nav-tabs#topOfPage
  %li
    = link_to( t('radiography.radio_tab'), team_radio_path(id: @team.id) )
  %li.active
    = link_to( t('radiography.team_current_swimmers_tab'), '#' )
  %li
    = link_to( t('radiography.best_timings_tab'), team_best_timings_path(id: @team.id) )

.container-fluid
  .row-fluid.span12.alert.alert-success.goggles-div-centeralign
    %h4
      = I18n.t('radiography.radio_tab') + ' -- '
      = I18n.t('radiography.team_radio_tab_title').gsub('{TEAM_NAME}', @team.get_full_name)
  .row-fluid
    .span3.goggles-div-centeralign
      = "#{ I18n.t(:name) }:"
    .span1.goggles-div-centeralign
      = "#{ I18n.t('swimmers.meeting_presence') }:"
    .span1.goggles-div-centeralign
      = "#{ I18n.t('swimmers.events_attended') }:"
  - @swimmers.each do |swimmer|
    .row-fluid
      .span3
        = link_to( swimmer.get_verbose_name, swimmer_radio_path(id: swimmer.id), { 'data-toggle'=>'tooltip', 'title'=>I18n.t('radiography.radio_tab_tooltip') } )
        = " (id=#{swimmer.id})" if admin_signed_in?
      .span1.goggles-div-rightalign
        = count_with_small_star( swimmer.meetings.uniq.count, 50, :left )
      .span1.goggles-div-rightalign
        = count_with_small_star( swimmer.meeting_individual_results.count + swimmer.meeting_relay_swimmers.count, 100, :left )

  .row-fluid
    %p
