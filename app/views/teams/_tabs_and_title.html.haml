.col-xs-12.goggles-category-gap#pageTop
%ul.nav.nav-tabs{role: "tablist"}
  = show_tab_link( params, 'radio', t('radiography.radio_tab'), team_radio_path(id: @team.id) )
  = show_tab_link( params, 'current_swimmers', t('radiography.team_current_swimmers_tab'), team_current_swimmers_path(id: @team.id) )
  - if @team.meeting_individual_results.count > 0
    = show_tab_link( params, 'best_timings', t('radiography.best_timings_tab'), team_best_timings_path(id: @team.id) )
    = show_tab_link( params, 'palmares', t('radiography.palmares_tab'), team_palmares_path(id: @team.id) )
    = show_tab_link( params, 'goggle_cup', @team.get_current_goggle_cup_name_at, team_goggle_cup_path(id: @team.id) )
    = show_tab_link( params, 'goggle_cup_all_of_fame', t('radiography.goggle_cup_all_of_fame_tab'), team_goggle_cup_all_of_fame_path(id: @team.id) )

.col-xs-12.goggles-category-gap
.col-xs-12.alert.alert-success.goggles-div-centeralign
  %h4
    = "#{@tab_title} -- "
    = I18n.t('radiography.team_radio_tab_title').gsub('{TEAM_NAME}', @team.get_full_name)
