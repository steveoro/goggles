= render partial: 'current_meetings_grid'

.accordion#accordionFlt
  .accordion-group
    .accordion-heading
      %a.accordion-toggle
        %h3#headerFlt= @title
    .accordion-body#collapseFlt
      .accordion-inner
        .row-fluid
          .span2
            = I18n.t(:description)
          .span10
            = grid_filter @meetings_grid, :flt_description
        .row-fluid
          .span2
            = I18n.t(:season_type, { scope: [:activerecord, :models] })
          .span10
            = grid_filter @meetings_grid, :flt_season_type_id
        .row-fluid
          .span2
            = I18n.t(:season, { scope: [:activerecord, :models] })
          .span10
            = grid_filter @meetings_grid, :flt_season_id
        .row-fluid
          .span2
            = I18n.t('meeting.planned_events')
          .span10
            .ui-widget
              = grid_filter @meetings_grid, :flt_events_list
        .row-fluid
          .span12
            .external-buttons
              %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'}
                = I18n.t(:submit)
              %button.btn.wg-external-reset-button{'data-grid-name' => 'grid'}
                = I18n.t(:reset)

.row-fluid
  .span12
    = render_grid( @meetings_grid )

%script
  $('#grid_f_id').combobox();
