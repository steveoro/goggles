<%= define_grid(@meetings_grid, hide_submit_button: true, hide_reset_button: true) do |g|
    # FIXME .odd & .even styles still prevail:
#    g.row_attributes do |meeting|
#        { class: MeetingDecorator.decorate(meeting).get_css_class_for_season_type }
#    end

    g.blank_slate do
        content_tag( :div, t(:no_data_found), class: 'well' )
    end

    g.column( name: 'ID', attribute: 'id', filter: false ) if admin_signed_in?

    g.column(
        name: I18n.t(:season, { scope: [:activerecord, :models] }),
        attribute: 'season_id',
        custom_filter: Season.to_dropdown( "(end_date >= '#{@start_date}') AND (end_date <= '#{@end_date}')" ),
        detach_with_id: :flt_season_id
    ) do |meeting|
        [
            MeetingDecorator.decorate(meeting).get_logo_for_season_type,
            { class: 'goggles-centeralign' }
        ] if meeting.season
    end

    g.column(
        name: I18n.t('meeting_calendar.scheduled_date'),
        attribute: 'header_date',
        detach_with_id: :flt_header_date
    ) do |meeting|
        link_to_if(
            meeting.has_invitation,
            meeting.header_date,
            meeting_show_invitation_path( id: meeting.id )
        )
    end

    g.column(
        name: I18n.t(:description),
        attribute: 'description',
        detach_with_id: :flt_description
    ) do |meeting|
        link_to_if(
            meeting.are_results_acquired,
            meeting.description,
            meeting_show_full_path( id: meeting.id, team_id: @preselected_team_id, swimmer_id: @preselected_swimmer_id )
        )
    end

    g.column(
        name: I18n.t('meeting.events_list'),
        attribute: 'id',
        allow_multiple_selection: false,
        custom_filter: Meeting.to_dropdown(
            "(header_date >= '#{@start_date}') AND (header_date <= '#{@end_date}')",
            :id,
            :get_complete_events
        ),
        detach_with_id: :flt_events_list
    ) do |meeting|
        link_to_if(
        	meeting.has_start_list,
        	meeting.get_complete_events.split("\r\n").map{ |e| content_tag(:p, e) }.join().html_safe,
        	meeting_show_start_list_path( id: meeting.id, team_id: @preselected_team_id, swimmer_id: @preselected_swimmer_id )
        )
    end

    g.column(
        name: I18n.t('meeting_calendar.pool'),
        attribute: 'id',
        detach_with_id: :flt_swimming_pool
    ) do |meeting|
    	link_to( meeting.swimming_pools.first.get_verbose_name, swimming_pool_path(meeting.swimming_pools.first) ) if meeting.swimming_pools.count > 0
    end 
end -%>
