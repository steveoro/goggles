= render partial: 'current_meetings_grid'
.accordion#accordionFlt
  .accordion-group
    .accordion-inner
      .accordion-heading
        %h3= @title
    .accordion-body
      .accordion-inner
        .row.col-xs-12
          .col-xs-4.col-sm-2
            = I18n.t('meeting_calendar.meeting')
          .col-xs-8.col-sm-10.col-lg-6
            = grid_filter @meetings_grid, :flt_description
        .row.col-xs-12
          .col-xs-4.col-sm-2
            = I18n.t('meeting_calendar.season')
          .col-xs-8.col-sm-7.col-lg-5
            = grid_filter @meetings_grid, :flt_season_id
        .row.col-xs-12
          .col-xs-4.col-sm-2
            = I18n.t('meeting_calendar.pool_type')
          .col-xs-6.col-sm-2
            = grid_filter @meetings_grid, :flt_pool_type
        -# Currently we disable the following filtering feature (it messes up too much the UI):
        -#.row.col-xs-12
        -#  .col-xs-2
        -#    = I18n.t('meeting_calendar.meeting_program')
        -#  .col-xs-10
        -#    .ui-widget
        -#      = grid_filter @meetings_grid, :flt_events_list
        .row.col-xs-12
          &nbsp;
        .row.col-xs-12
          .external-buttons
            %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'}
              = I18n.t(:submit)
            %button.btn.btn-default.wg-external-reset-button{'data-grid-name' => 'grid'}
              = I18n.t(:reset)
        .row.col-xs-12
          &nbsp;

.row.col-xs-12
  = render_grid( @meetings_grid )

.row.col-xs-12
  &nbsp;
