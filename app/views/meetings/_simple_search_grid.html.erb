<%= grid(@meetings_grid) do |g|
    # FIXME .odd & .even styles still prevail:
#    g.row_attributes do |meeting|
#        { class: MeetingDecorator.decorate(meeting).get_css_class_for_season_type }
#    end

    g.blank_slate do
        content_tag( :div, t('meeting.no_records_matching_search_text'), class: 'well' )
    end

    g.column( name: 'ID', attribute: 'id', filter: false ) if admin_signed_in?

    g.column(
        name: I18n.t(:description),
        attribute: 'description',
    ) do |meeting|
        link_to_if(
            meeting.meeting_individual_results.count + meeting.meeting_relay_results.count > 0,
            meeting.description,
            meeting_show_full_path( id: meeting.id, team_id: @preselected_team_id, swimmer_id: @preselected_swimmer_id )
        )
    end

    g.column(
        name: I18n.t(:season_type, { scope: [:activerecord, :models] }),
        model: Season,
        attribute: 'season_type_id',
        custom_filter: SeasonType.to_dropdown,
    ) do |meeting|
        [
            MeetingDecorator.decorate(meeting).get_logo_for_season_type,
            { class: 'goggles-centeralign' }
        ]
    end

    g.column(
        name: I18n.t(:season, { scope: [:activerecord, :models] }),
        attribute: 'season_id',
        custom_filter: Season.to_dropdown,
    ) do |meeting|
        meeting.season.get_full_name if meeting.season
    end

    g.column(
        name: I18n.t(:any_date),
        attribute: 'header_date',
    ) do |meeting|
        meeting.header_date
    end

    g.column(
        name: I18n.t('meeting.events_list'),
    ) do |meeting|
        meeting.get_complete_events.split("\r\n")
            .map{ |e| content_tag(:p, e) }.join().html_safe
    end

    g.column(
        name: I18n.t('meeting.start_list_and_manifest'),
    ) do |meeting|
        link_to(
            image_tag('book_open.png', 'data-toggle' => 'tooltip', title: I18n.t('meeting.start_list_tooltip') ),
            wip_path()
        ) if (meeting.meeting_entries.count > 0)
    end
end -%>
