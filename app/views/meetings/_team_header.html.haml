.accordion#accordionTeam
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{'data-toggle' => 'collapse', 'data-parent' => '#accordionTeam', :href => '#collapseTeam'}
        %h3#headerTeam{'data-toggle' => 'tooltip', 'title' => I18n.t(:detail_show_tooltip)}= @team.get_full_name
    .accordion-body.collapse.in#collapseTeam
      .accordion-inner
        .row-fluid
          .span3
            = I18n.t(:team_total_events, {:scope=>[:meeting]}) +':'
          .span1.goggles-div-rightalign
            = @team_tot_events
        .row-fluid
          .span3
            = I18n.t(:team_total_gold_medals, {:scope=>[:meeting]}) +':'
          .span1.goggles-div-rightalign
            = @team_ranks_1
          .span1
            = show_tag( @team_ranks_1>0, "medal_gold_3.png" )
        .row-fluid
          .span3
            = I18n.t(:team_total_silver_medals, {:scope=>[:meeting]}) +':'
          .span1.goggles-div-rightalign
            = @team_ranks_2
          .span1
            = show_tag( @team_ranks_2>0, "medal_silver_3.png" )
        .row-fluid
          .span3
            = I18n.t(:team_total_bronze_medals, {:scope=>[:meeting]}) +':'
          .span1.goggles-div-rightalign
            = @team_ranks_3
          .span1
            = show_tag( @team_ranks_3>0, "medal_bronze_3.png" )
        .row-fluid
          .span3.right-align
            = I18n.t(:team_total_wooden_medals, {:scope=>[:meeting]}) +':'
          .span1.goggles-div-rightalign
            = @team_ranks_4
        .row-fluid
          .span3
            = I18n.t(:team_total_750plus_scores, {:scope=>[:meeting]}) +':'
          .span1.goggles-div-rightalign
            = @team_outstanding_scores

      .accordion-inner
        %div.span10
          %table.table.table-striped.table-bordered.table-hover.table-condensed
            %tbody
              %tr
                %td{'colspan'=>'4'}
                  %i= I18n.t(:team_total_athletes, {:scope=>[:meeting]}) + ": #{ @meeting_team_swimmers.size }"
              - @meeting_team_swimmers.each do |swimmer|
                %tr
                  %td{'colspan'=>'1'}
                    %b= swimmer.get_full_name
                  - @events_per_swimmers[swimmer.id].each do |row|
                    %td{'colspan'=>"#{ @events_per_swimmers[swimmer.id].size < 2 ? 2 : 1 }"}
                      - event_type = row.meeting_event.event_type
                      %a(href="\##{event_type.code}")= event_type.i18n_short
                      = show_tag( row.rank==1 && row.meeting_individual_points>0, "medal_gold_3.png" )
                      = show_tag( row.rank==2 && row.meeting_individual_points>0, "medal_silver_3.png" )
                      = show_tag( row.rank==3 && row.meeting_individual_points>0, "medal_bronze_3.png" )
                      = show_tag( row.meeting_individual_points>800, "asterisk_orange.png" )
                      = "#{row.meeting_individual_points} !" if row.meeting_individual_points>800

%script
  $('#headerTeam').tooltip({placement:'bottom'});
  $('body').attr('data-spy', 'scroll');
  $('body').attr('data-target','#goggles-float-list');
  $('#goggles-float-list').scrollspy();
  $('[data-spy="scroll"]').each(function () { var $spy = $(this).scrollspy('refresh') });
