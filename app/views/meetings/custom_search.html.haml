= render partial: 'custom_search_grid'
.accordion#accordionFlt
  .accordion-group
    .accordion-inner
      .accordion-heading
        %h3= @title
        - if params[:swimmer_id] || params[:team_id] || params[:text].to_s.size > 0
          = link_to( t('meeting.clear_prefiltering'), meetings_custom_search_path(text:''), {class: "btn"} )
    .accordion-body
      .accordion-inner
        .row
          .col-xs-2
            = I18n.t('meeting_calendar.federation')
          .col-xs-10
            = grid_filter @meetings_grid, :flt_season_type_id
        .row
          .col-xs-2
            = I18n.t('meeting_calendar.season')
          .col-xs-10
            .ui-widget
              = grid_filter @meetings_grid, :flt_season_id
        .row
          .col-xs-2
            = I18n.t('meeting_calendar.meeting')
          .col-xs-10
            = grid_filter @meetings_grid, :flt_description
        .row
          .col-xs-2
            = I18n.t('meeting_calendar.pool_type')
          .col-xs-10
            = grid_filter @meetings_grid, :flt_pool_type
        .row
          .col-xs-2
            = I18n.t(:date_from_to)
          .col-xs-10
            = grid_filter @meetings_grid, :flt_entry_header_date
        .row
          %br
        .row
          .col-xs-2
            .external-buttons
              %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'}
                = I18n.t(:submit)
              %button.btn.wg-external-reset-button{'data-grid-name' => 'grid'}
                = I18n.t(:reset)
          .col-xs-10
            = link_to( t('meeting.search_by_swimmer'), meetings_search_swimmer_path(), {class: "btn"} )
            = link_to( t('meeting.search_by_team'), meetings_search_team_path(), {class: "btn"} )
.row
  .col-xs-12
    = render_grid( @meetings_grid )
%script
  $('#grid_f_season_id').combobox();
