= render partial: 'search_swimmer_grid'
.accordion#accordionFlt
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{'data-toggle' => 'collapse', 'data-parent' => '#accordionFlt', :href => '#collapseFlt', 'data-turbolinks'=>'false'}
        %h3#headerFlt{'data-toggle' => 'tooltip', 'title' => I18n.t(:search_tooltip)}= @title
        %script
          $('#headerFlt').tooltip({placement:'bottom'});
    .accordion-body.collapse.in#collapseFlt
      .accordion-inner
        .row
          .col-xs-2
            = I18n.t(:complete_name, { scope: [:swimmers] })
          .col-xs-10
            = grid_filter @swimmers_grid, :flt_swimmer_complete_name
        .row
          .col-xs-12
            .external-buttons
              %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'}
                = I18n.t(:submit)
              %button.btn.wg-external-reset-button{'data-grid-name' => 'grid'}
                = I18n.t(:reset)
.row
  .col-xs-12
    = render_grid( @swimmers_grid )
