%ul.nav.nav-tabs#topOfPage
  %li
    = link_to(t(:results), meetings_show_full_path(:id=>@meeting.id, :team_id=>@preselected_team_id))
  %li
    = link_to(t(:ranking), meetings_show_ranking_path(:id=>@meeting.id, :team_id=>@preselected_team_id))
  %li.active
    = link_to(t(:stats), '#')
  %li{ :class => (@preselected_team_id ? '' : 'disabled') }
    = link_to(t(:team_results), meetings_show_team_results_path(:id=>@meeting.id, :team_id=>@preselected_team_id))
  %li.disabled
    = link_to(t(:swimmer_results), '#')

= render( partial: 'meeting_header' )

.row-fluid
  .span12
    = render( partial: 'meeting_stats_grid' )
