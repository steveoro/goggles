.row-fluid
  .span9

    %table.table.table-striped.table-bordered.table-hover.table-condensed
      %tbody
        %tr{'class'=>'success'}
          %td.span3.goggles-centeralign{'colspan'=>4}
            %b
              %i= I18n.t('meeting_stats.oldest')

        - if @meeting_stats.oldest_female_swimmers.size > 0
          - swimmer = @meeting_stats.oldest_female_swimmers.first
          %tr
            %td.span3
              = I18n.t('meeting_stats.oldest_female_athlete')
            %td.span3
              %a{'id'=>"swimmer#{swimmer.id}", 'href'=>"#{ meeting_show_swimmer_results_path(:id=>@meeting.id, :swimmer_id=>swimmer.id) }", 'data-toggle' => 'tooltip', 'title' => I18n.t('meeting.show_swimmer_results_tooltip')}
                = swimmer.get_full_name
            %td.span1.goggles-rightalign
              = @meeting.header_date.year - swimmer.year_of_birth.to_i
              = image_tag( "cake.png" )
            %td.span1.goggles-rightalign
              = swimmer.year_of_birth

        - if @meeting_stats.oldest_male_swimmers.size > 0
          - swimmer = @meeting_stats.oldest_male_swimmers.first
          %tr
            %td.span3
              = I18n.t('meeting_stats.oldest_male_athlete')
            %td.span3
              %a{'id'=>"swimmer#{swimmer.id}", 'href'=>"#{ meeting_show_swimmer_results_path(:id=>@meeting.id, :swimmer_id=>swimmer.id) }", 'data-toggle' => 'tooltip', 'title' => I18n.t('meeting.show_swimmer_results_tooltip')}
                = swimmer.get_full_name
            %td.span1.goggles-rightalign
              = @meeting.header_date.year - swimmer.year_of_birth.to_i
              = image_tag( "cake.png" )
            %td.span1.goggles-rightalign
              = swimmer.year_of_birth

    %table.table.table-striped.table-bordered.table-hover.table-condensed
      %tbody
        %tr{'class'=>'success'}
          %td.span3.goggles-centeralign{'colspan'=>7}
            %b
              %i= I18n.t('meeting_stats.specials')

        - @meeting_stats.best_standard_female_scores.each_with_index do | mir,index |
          - swimmer = mir.swimmer
          %tr
            - if index == 0
              %td.span3{'rowspan'=>@meeting_stats.best_standard_female_scores.count}
                = I18n.t( 'meeting_stats.best_female_score' )
            %td.span1.goggles-rightalign
              = sprintf( "%02.2f", mir.standard_points )
            %td.span3
              %a{'id'=>"#{swimmer.id}", 'href'=>"#{ meeting_show_swimmer_results_path(:id=>@meeting.id, :team_id=>mir.team_id, :swimmer_id=>swimmer.id) }", 'data-toggle' => 'tooltip', 'title' => I18n.t('meeting.show_swimmer_results_tooltip')}
                = swimmer.get_full_name
            %td.span1.goggles-rightalign
              = swimmer.year_of_birth
            %td.span1
              = mir.get_event_type
            %td.span1.goggles-centeralign
              = mir.get_category_type_short_name
            %td.span1.goggles-rightalign
              = mir.get_timing.to_s

        - @meeting_stats.worst_standard_female_scores.each_with_index do | mir,index |
          - swimmer = mir.swimmer
          %tr
            - if index == 0
              %td.span3{'rowspan'=>@meeting_stats.worst_standard_female_scores.count}
                = I18n.t( 'meeting_stats.worst_female_score' )
            %td.span1.goggles-rightalign
              = sprintf( "%02.2f", mir.standard_points )
            %td.span3
              %a{'id'=>"#{swimmer.id}", 'href'=>"#{ meeting_show_swimmer_results_path(:id=>@meeting.id, :team_id=>mir.team_id, :swimmer_id=>swimmer.id) }", 'data-toggle' => 'tooltip', 'title' => I18n.t('meeting.show_swimmer_results_tooltip')}
                = swimmer.get_full_name
            %td.span1.goggles-rightalign
              = swimmer.year_of_birth
            %td.span1
              = mir.get_event_type
            %td.span1.goggles-centeralign
              = mir.get_category_type_short_name
            %td.span1.goggles-rightalign
              = mir.get_timing.to_s

        - @meeting_stats.best_standard_male_scores.each_with_index do | mir,index |
          - swimmer = mir.swimmer
          %tr
            - if index == 0
              %td.span3{'rowspan'=>@meeting_stats.best_standard_male_scores.count}
                = I18n.t( 'meeting_stats.best_female_score' )
            %td.span1.goggles-rightalign
              = sprintf( "%02.2f", mir.standard_points )
            %td.span3
              %a{'id'=>"#{swimmer.id}", 'href'=>"#{ meeting_show_swimmer_results_path(:id=>@meeting.id, :team_id=>mir.team_id, :swimmer_id=>swimmer.id) }", 'data-toggle' => 'tooltip', 'title' => I18n.t('meeting.show_swimmer_results_tooltip')}
                = swimmer.get_full_name
            %td.span1.goggles-rightalign
              = swimmer.year_of_birth
            %td.span1
              = mir.get_event_type
            %td.span1.goggles-centeralign
              = mir.get_category_type_short_name
            %td.span1.goggles-rightalign
              = mir.get_timing.to_s

        - @meeting_stats.worst_standard_male_scores.each_with_index do | mir,index |
          - swimmer = mir.swimmer
          %tr
            - if index == 0
              %td.span3{'rowspan'=>@meeting_stats.worst_standard_male_scores.count}
                = I18n.t( 'meeting_stats.worst_male_score' )
            %td.span1.goggles-rightalign
              = sprintf( "%02.2f", mir.standard_points )
            %td.span3
              %a{'id'=>"#{swimmer.id}", 'href'=>"#{ meeting_show_swimmer_results_path(:id=>@meeting.id, :team_id=>mir.team_id, :swimmer_id=>swimmer.id) }", 'data-toggle' => 'tooltip', 'title' => I18n.t('meeting.show_swimmer_results_tooltip')}
                = swimmer.get_full_name
            %td.span1.goggles-rightalign
              = swimmer.year_of_birth
            %td.span1
              = mir.get_event_type
            %td.span1.goggles-centeralign
              = mir.get_category_type_short_name
            %td.span1.goggles-rightalign
              = mir.get_timing.to_s
