.goggles-category-gap#pageTop
  %ul.nav.nav-tabs
    - if @meeting.invitation
      - if ( params[:action] == 'show_invitation' )
        %li.active
          = link_to( t('meeting.invitation'), '#', {'data-turbolinks'=>'false'} )
      - else
        %li
          = link_to( t('meeting.invitation'), meeting_show_invitation_path( id: @meeting.id ) )
    - if @meeting.has_start_list && (!@meeting.are_results_acquired || Date.current() <= @meeting.header_date + 1)
      - if ( params[:action] == 'show_start_list' )
        %li.active
          = link_to( t('meeting.start_list'), '#', {'data-turbolinks'=>'false'} )
      - else
        %li
          = link_to( t('meeting.start_list'), meeting_show_start_list_path( id: @meeting.id ) )

      - if ( params[:action] == 'show_start_list_by_category' )
        %li.active
          = link_to( t('meeting.start_list_by_category'), '#', {'data-turbolinks'=>'false'} )
      - else
        %li
          = link_to( t('meeting.start_list_by_category'), meeting_show_start_list_by_category_path( id: @meeting.id ) )

      - if ( params[:action] == 'show_team_entries' )
        - if @team
          %li.active
            = link_to( t('meeting.team_entries'), '#', {'data-turbolinks'=>'false'} )
        - else
          %li.active{ 'data-toggle' => 'tooltip', 'title' => I18n.t(:login_to_view_this_data) }
            = link_to( t('meeting.team_entries'), '#', {'data-turbolinks'=>'false'} )
      - else
        - if @team
          %li
            = link_to( t('meeting.team_entries'), meeting_show_team_entries_path( id: @meeting.id, team_id: @team.id ), {'data-turbolinks'=>'false'} )
        - else
          %li.disabled{ 'data-toggle' => 'tooltip', 'title' => I18n.t(:login_to_view_this_data) }
            = link_to( t('meeting.team_entries'), '#', {'data-turbolinks'=>'false'} )

    - if @meeting.are_results_acquired
      - if ( params[:action] == 'show_full' )
        %li.active
          = link_to( t(:results), '#', {'data-turbolinks'=>'false'} )
      - else
        %li
          = link_to( t(:results), meeting_show_full_path( id: @meeting.id ) )

      - if ( params[:action] == 'show_ranking' )
        %li.active
          = link_to( t(:ranking), '#', {'data-turbolinks'=>'false'} )
      - else
        %li
          = link_to( t(:ranking), meeting_show_ranking_path( id: @meeting.id ) )

    - if @meeting.are_results_acquired || @meeting.has_start_list
      - if ( params[:action] == 'show_stats' )
        %li.active
          = link_to( t(:stats), '#', {'data-turbolinks'=>'false'} )
      - else
        %li
          = link_to( t(:stats), meeting_show_stats_path( id: @meeting.id ) )

    - if @meeting.are_results_acquired
      - if ( params[:action] == 'show_team_results' )
        %li.active
          = link_to( t(:team_results), '#', {'data-turbolinks'=>'false'} )
      - else
        %li{ class: @team ? '' : 'disabled' }
          = link_to( t(:team_results), @team ? meeting_show_team_results_path( id: @meeting.id, team_id: @team.id ) : '#' )

      - if ( params[:action] == 'show_swimmer_results' )
        %li.active
          = link_to( t(:swimmer_results), '#', {'data-turbolinks'=>'false'} )
      - else
        %li{ class: @swimmer && @team ? '' : 'disabled' }
          = link_to( t(:swimmer_results), @swimmer && @team ? meeting_show_swimmer_results_path( id: @meeting.id, team_id: @team.id, swimmer_id: @swimmer.id ) : '#' )

      - if current_user && current_user.team_managers.count > 0
        - if ( params[:action] == 'edit_passages' )
          %li.active
            = link_to( t('meeting.passages'), '#', {'data-turbolinks'=>'false'} )
        - else
          %li
            = link_to( t('meeting.passages'), meeting_edit_passages_path( id: @meeting.id ) )
