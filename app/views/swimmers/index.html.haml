= render partial: 'search_swimmer_grid'

.accordion#accordionFlt
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{'data-turbolinks'=>'false', 'data-toggle' => 'collapse', 'data-parent' => '#accordionFlt', :href => '#collapseFlt'}
        %h3#headerFlt{'data-toggle' => 'tooltip', 'title' => I18n.t(:search_tooltip)}= @title
        %script
          $('#headerFlt').tooltip({placement:'bottom'});

    .accordion-body.collapse.in#collapseFlt
      .accordion-inner
        .row.col-xs-12
          .col-xs-4.col-sm-2
            = I18n.t('swimmers.complete_name')
          .col-xs-8.col-sm-10
            = grid_filter @swimmers_grid, :flt_swimmer_complete_name
        .row.col-xs-12
          &nbsp;
        .row.col-xs-12
          .col-xs-6
            .external-buttons
              %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'}
                = I18n.t(:submit)
              %button.btn.btn-default.wg-external-reset-button{'data-grid-name' => 'grid'}
                = I18n.t(:reset)
        .row.col-xs-12
          &nbsp;

.row.col-xs-12
  = render_grid( @swimmers_grid )
