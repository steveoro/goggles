%ul.nav.nav-tabs#topOfPage
  %li
    = link_to( t('radiography.radio_tab'), radio_swimmer_path(:id=>@swimmer.id) )
  %li.active
    = link_to( t('radiography.medals_tab'), '#' )
  %li
    = link_to( t('radiography.best_timings_tab'), best_timings_swimmer_path(:id=>@swimmer.id) )
  %li
    = link_to( t('radiography.all_races_tab'), all_races_swimmer_path(:id=>@swimmer.id) )
  %li
    = link_to( t('radiography.misc'), misc_swimmer_path(:id=>@swimmer.id) )

.container-fluid
  .row-fluid.span12.alert.alert-success.goggles-div-centeralign
    - tab_title = I18n.t('radiography.radio_tab_title').gsub('{SWIMMER_NAME}', @swimmer.get_full_name)
    %h4
      = I18n.t('radiography.medals_tab') + ' -- '
      = tab_title

  .row-fluid
    .span9
      .row-fluid
        .span3
          = I18n.t('radiography.total_gold_medals') +':'
        .span6
          = @gold_medals
      .row-fluid
        .span3
          = I18n.t('radiography.total_silver_medals') +':'
        .span6
          = @silver_medals
      .row-fluid
        .span3
          = I18n.t('radiography.total_bronze_medals') +':'
        .span6
          = @bronze_medals
      .row-fluid
        .span3
          = I18n.t('radiography.total_wooden_medals') +':'
        .span6
          = @wooden_medals
      .row-fluid
        .span3
          = I18n.t('radiography.total_season_records') +':'
        .span6
          = @tot_season_records_for_this_swimmer

    .span3
      = image_tag( 'img_radiography.jpg', :class=>"img-polaroid" ) 
