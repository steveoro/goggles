%ul.nav.nav-tabs#topOfPage
  %li
    = link_to( t('radiography.radio_tab'), swimmer_radio_path(:id=>@swimmer.id) )
  %li
    = link_to( t('radiography.medals_tab'), swimmer_medals_path(:id=>@swimmer.id) )
  %li
    = link_to( t('radiography.best_timings_tab'), swimmer_best_timings_path(:id=>@swimmer.id) )
  %li
    = link_to( t('radiography.all_races_tab'), swimmer_all_races_path(:id=>@swimmer.id) )
  %li.active
    = link_to( t('radiography.misc_tab'), '#' )

.container-fluid
  .row-fluid.span12.alert.alert-success.goggles-div-centeralign
    %h4
      = I18n.t('radiography.misc_tab') + ' -- '
      = I18n.t('radiography.radio_tab_title').gsub('{SWIMMER_NAME}', @swimmer.get_full_name)
  .row-fluid
    .span12
      %p= "#{t('radiography.compute_fin_score_for')} #{@swimmer.get_full_name}: #{@season.get_full_name}" 
      %p= "#{@gender_type.get_full_name} #{@category_type.get_full_name}" 
  .row-fluid
    .span12
      = form_tag( :misc, class: 'form-horizontal', :onsubmit => "$('#loadingIndicator').show(); ") do
        .row-fluid
          .control-group
            = label_tag( :pool_type, I18n.t(:pool_type), :for => :pool_type, class: 'control-label' )
            .controls
              = select( :pool_type, :pool_type_id, PoolType.to_dropdown(), { :prompt => I18n.t(:please_select) }, { class: 'input-xlarge' } )
          .control-group
            = label_tag( :event_type, I18n.t(:event_type), :for => :event_type, class: 'control-label' )
            .controls
              = select( :event_type, :event_type_id, EventType.to_dropdown(), { :prompt => I18n.t(:please_select) }, { class: 'input-xlarge' } )
        .row-fluid
          .control-group
            = label_tag( :timing, t('radiography.timing'), :for => :timing, class: 'control-label' )
            .controls
              = text_field_tag( :minutes, 0, class: 'input-xlarge' )
              = text_field_tag( :seconds, 0, class: 'input-xlarge' )
              = text_field_tag( :hundreds, 0, class: 'input-xlarge' )
        .row-fluid
          .control-group
            .controls
              = submit_tag( I18n.t('radiography.compute'), :data => {:disable_with => I18n.t(:please_wait), class: 'btn disabled'}, class: 'btn' )
              %span(id='loadingIndicator' hidden='true')
                = image_tag( 'indicator.gif' )
