.row#rules_regional_er_csi
  .goggles-category-gap#pageTop
    = render( partial: 'regional_er_csi_tabs' )
  .goggles-category-gap
    = render( partial: 'title' )

    - if @season.id != @current_season_id
      .navbar
        %ul.nav.nav-pills
          %li
            = link_to( t('championships.back_to_current'), championships_rules_regional_er_csi_path( id: @current_season_id ), {class: "goggles-nav-compact"})
        .ghost-divider-vertical

    - if @season.rules
      - html_doc = Nokogiri::HTML( @season.rules )
      .row.col-xs-12
        = html_doc.css('style').to_html.html_safe
        = html_doc.css('body').inner_html.html_safe

.row.goggles-category-gap
