%h2= t('devise.new_session_title')

.row
  = form_for( resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'} ) do |f|
    .row.form-group
      = f.label( :email, for: :user_email, class: 'control-label' )
      .controls
        = f.email_field( :email, autofocus: true )
    .row.form-group
      = f.label( :password, for: :user_password, class: 'control-label' )
      .controls
        = f.password_field( :password )
    .row.form-group
      - if devise_mapping.rememberable?
        = f.label( t(:remember_me), for: :user_remember_me, class: 'control-label' )
        .controls
          = f.check_box( :remember_me )
    .row.form-group
      .controls
        = f.submit( t('devise.new_session_submit') )

= render( "users/shared/links" )
