%section
  .modal-dialog{:role => "document"}
    .row.modal-content
      .modal-body
        .col-xs-12
          %h2.text-center.text-uppercase
            = I18n.t("devise.passwords.forgot_password")
        .col-xs-12
          = simple_form_for( resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }, defaults: {input_html: { class: 'form-control' }} ) do |f|
            .form-group.col-xs-12
              = devise_error_messages!
              -#= f.error_notification
              = f.input( :email, required: true, autofocus: true, placeholder: I18n.t("devise.email_placeholder"), label: I18n.t("devise.email_label") )
            .form-group.col-xs-12
              = f.button( :submit, t('devise.new_password_submit'), class: "btn btn-primary" )
        = render( "users/shared/links" )
