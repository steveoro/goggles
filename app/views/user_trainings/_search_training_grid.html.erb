<%= define_grid(@user_trainings_grid) do |g|
	g.column( name: 'ID', attribute: 'id', filter: false ) if admin_signed_in?

	g.column(
		name: I18n.t( :description, {:scope=>[:activerecord, :attributes, :training]} ),
		attribute: 'description',
	) do |user_training|
		@can_edit = (user_training.user_id == current_user.id) || admin_signed_in?
		link_to( user_training.description, user_training_path(user_training) )
	end

	g.column(
		name: I18n.t(:user, {:scope=>[:activerecord, :models]}),
		attribute: 'user_id',
		custom_filter: User.to_dropdown,
	) do |user_training|
		user_training.get_user_name
	end

	g.column do |user_training|
		[
			link_to(
					I18n.t('user_trainings.create_user_story'),
					user_training_create_user_story_path(user_training),
					:method => :post,
					:confirm => I18n.t('user_trainings.create_user_story_ask_confirm')
	 		),
	 		{ :class => 'goggles-centeralign' }
		]
	end

	g.column do |user_training|						# Enable edit action link, but only if the current user is the owner:
		[
			link_to( edit_user_training_path(user_training) ) do
				image_tag('page_edit.png') << " #{I18n.t(:edit)}"
			end,
	 		{ :class => 'goggles-centeralign' }
		]
	end if @can_edit

	g.column do |user_training|
		[
			link_to( user_training_printout_path(user_training) ) do
				image_tag('page_white_acrobat.png') << " PDF"
			end,
	 		{ :class => 'goggles-centeralign' }
		]
	end

	g.column do |user_training|						# Enable delete action link, but only if the current user is the owner:
		[
			link_to(
					I18n.t(:delete),
					user_training_path(user_training),
					:method => :delete,
					:confirm => I18n.t(:are_you_sure, :scope => [:netzke,:basepack,:grid_panel])
	 		),
	 		{ :class => 'goggles-centeralign' }
		]
	end if @can_edit

	g.column do |user_training|
		[
			link_to(
					I18n.t(:duplicate),
					user_training_duplicate_path(user_training),
					:method => :post,
					:confirm => I18n.t(:are_you_sure, :scope => [:netzke,:basepack,:grid_panel])
	 		),
	 		{ :class => 'goggles-centeralign' }
		]
	end
end -%>
