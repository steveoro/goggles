.row-fluid
  .span12
    = link_to( I18n.t(:back_to_index_view), swimming_pools_path() )

%ul.nav.nav-tabs#topOfPage
  %li.active
    = link_to(t('swimming_pool.details'), '#')
  %li
    = link_to(t('swimming_pool.reviews'), for_pool_swimming_pool_reviews_path(@pool.id))

.accordion
  .accordion-group
    .accordion-heading.goggles-accordion-heading
      .row-fluid
        .span11
          %h3= "#{I18n.t('meeting_calendar.pool')} #{@pool.get_verbose_name}"
        .span1
          - decorated_pool = SwimmingPoolDecorator.decorate(@pool)
          - unless decorated_pool.get_maps_url.nil?
            #mapsLink{'data-toggle' => 'tooltip', 'title' => I18n.t('swimming_pool.maps_link_tooltip')}= link_to( image_tag('gmaps_new_32.png'), @pool.get_maps_url )
    .accordion-body
      .accordion-inner
        .row-fluid
          .span2
            = 'ID:'
          .span10
            = @pool.id
        .row-fluid
          .span12
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.nick_name') + ':'
          .span10
            = decorated_pool.nick_name
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.lanes_number') + ':'
          .span10
            = decorated_pool.get_pool_lanes_number
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.phone_number') + ':'
          .span10
            = decorated_pool.phone_number
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.fax_number') + ':'
          .span10
            = decorated_pool.fax_number
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.e_mail') + ':'
          .span10
            = decorated_pool.e_mail
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.contact_name') + ':'
          .span10
            = decorated_pool.contact_name
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.has_multiple_pools') + ':'
          .span10
            = show_tag( decorated_pool.has_multiple_pools )
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.has_open_area') + ':'
          .span10
            = show_tag( decorated_pool.has_open_area )
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.has_bar') + ':'
          .span10
            = show_tag( decorated_pool.has_bar )
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.has_restaurant_service') + ':'
          .span10
            = show_tag( decorated_pool.has_restaurant_service )
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.has_gym_area') + ':'
          .span10
            = show_tag( decorated_pool.has_gym_area )
        .row-fluid
          .span2
            = I18n.t('activerecord.attributes.swimming_pool.has_children_area') + ':'
          .span10
            = show_tag( decorated_pool.has_children_area )
        .row-fluid
          .span2
            = I18n.t('activerecord.models.pool_type') + ':'
          .span10
            = decorated_pool.get_pool_type
        .row-fluid
          .span2
            = I18n.t('activerecord.models.locker_cabinet_type') + ':'
          .span10
            = decorated_pool.get_locker_cabinet_type
        .row-fluid
          .span2
            = I18n.t('activerecord.models.shower_type') + ':'
          .span10
            = decorated_pool.get_shower_type
        .row-fluid
          .span2
            = I18n.t('activerecord.models.hair_dryer_type') + ':'
          .span10
            = decorated_pool.get_hair_dryer_type
        .row-fluid
          .span2
            %i= I18n.t(:updated_at) + ':'
          .span10
            %i= Format.a_short_datetime( decorated_pool.updated_at )
        %script
          $('#mapsLink').tooltip(placement:'bottom')
        - unless decorated_pool.maps_uri.nil? || decorated_pool.maps_uri.empty?
          .row-fluid
            %hr
          %iframe(src="#{@pool.maps_uri}" width="100%" height="450" frameborder="0" style="border:0")
