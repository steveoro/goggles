#search_results
  - if @swimmers.count > 0
    .col-xs-12.goggles-category-gap
      %p
        = image_tag('img_radiography.jpg', class: 'img-circle', style: "width: 25px;")
        %i
          = I18n.t('search_view.tot_results')
          = @swimmers.count
        %span.btn{ "type"=>"button", "data-toggle"=>"collapse", "data-target"=>"#searchSwimmersResult", |
            "aria-expanded"=>"true", "aria-controls"=>"searchSwimmersResult" }                          |
          %span{"data-toggle"=>"tooltip", "title"=>I18n.t('search_view.toggle_collapse_expand_tooltip')}
            = image_tag('bullet_plus_minus.png')
    #searchSwimmersResult.collapse.in
      = render( partial: 'goggles/swimmer_list' )

  - if @teams.count > 0
    .col-xs-12.goggles-category-gap
      %p
        = image_tag('user-group-128.png', class: 'img-circle', style: "width: 25px;")
        %i
          = I18n.t('search_view.tot_results')
          = @teams.count
        %span.btn{ "type"=>"button", "data-toggle"=>"collapse", "data-target"=>"#searchTeamsResult",    |
            "aria-expanded"=>"true", "aria-controls"=>"searchTeamsResult" }                             |
          %span{"data-toggle"=>"tooltip", "title"=>I18n.t('search_view.toggle_collapse_expand_tooltip')}
            = image_tag('bullet_plus_minus.png')
        %br/
        %i
          %small= I18n.t('search_view.team_results_explain')
    #searchTeamsResult.collapse.in
      = render( partial: 'goggles/team_list' )

  - if @pools.count > 0
    .col-xs-12.goggles-category-gap
      %p
        = image_tag('swimming-pool-128.png', class: 'img-circle', style: "width: 25px;")
        %i
          = I18n.t('search_view.tot_results')
          = @pools.count
        %span.btn{ "type"=>"button", "data-toggle"=>"collapse", "data-target"=>"#searchPoolsResult",    |
            "aria-expanded"=>"true", "aria-controls"=>"searchPoolsResult" }                             |
          %span{"data-toggle"=>"tooltip", "title"=>I18n.t('search_view.toggle_collapse_expand_tooltip')}
            = image_tag('bullet_plus_minus.png')
    #searchPoolsResult.collapse.in
      = render( partial: 'goggles/pool_list' )

  - if @meetings.count > 0
    .col-xs-12.goggles-category-gap
      %p
        = image_tag('victory-stand-128.png', class: 'img-circle', style: "width: 25px;")
        %i
          = I18n.t('search_view.tot_results')
          = @meetings.count
        %span.btn{ "type"=>"button", "data-toggle"=>"collapse", "data-target"=>"#searchMeetingsResult", |
            "aria-expanded"=>"true", "aria-controls"=>"searchMeetingsResult" }                          |
          %span{"data-toggle"=>"tooltip", "title"=>I18n.t('search_view.toggle_collapse_expand_tooltip')}
            = image_tag('bullet_plus_minus.png')
        %br/
        %i
          %small= I18n.t('search_view.meeting_results_explain')
    #searchMeetingsResult.collapse.in
      = render( partial: 'goggles/meeting_list' )

  - if @swimmers.count == 0 && @teams.count == 0 && @pools.count == 0 && @meetings.count == 0
    .col-xs-12.goggles-category-gap
      %i.text-center
        = I18n.t("search_view.no_results_found_warning")
