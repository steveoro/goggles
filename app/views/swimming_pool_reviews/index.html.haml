= render partial: 'search_review_grid'

.accordion#accordionFlt
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{'data-toggle' => 'collapse', 'data-parent' => '#accordionFlt', :href => '#collapseFlt'}
        %h3#headerFlt{'data-toggle' => 'tooltip', 'title' => I18n.t(:search_tooltip)}= @title
        %script
          $('#headerFlt').tooltip({ placement: 'bottom' });

    .accordion-body.collapse.in#collapseFlt
      .accordion-inner
        .row.col-xs-12
          .col-xs-2
            = I18n.t(:title)
          .col-xs-10
            = grid_filter @reviews_grid, :flt_review_title
        .row.col-xs-12
          .col-xs-2
            = I18n.t('activerecord.models.swimming_pool')
          .col-xs-10
            = grid_filter @reviews_grid, :flt_swimming_pool_id
        .row.col-xs-12
          &nbsp;
        .row.col-xs-12
          .col-xs-6
            .external-buttons
              %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'}
                = I18n.t(:submit)
              %button.btn.btn-default.wg-external-reset-button{'data-grid-name' => 'grid'}
                = I18n.t(:reset)
        .row.col-xs-12
          &nbsp;

.row.col-xs-12
  = render_grid( @reviews_grid )
